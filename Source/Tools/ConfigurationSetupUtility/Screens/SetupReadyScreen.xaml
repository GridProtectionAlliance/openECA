<UserControl x:Class="ConfigurationSetupUtility.Screens.SetupReadyScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" MinWidth="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=FrameworkElement, AncestorLevel=1}, Path=ActualWidth}">
    <DockPanel>
        <Label Content="Setup is ready" Margin="10" HorizontalContentAlignment="Center" DockPanel.Dock="Top" FontSize="16" FontWeight="Bold" />
        <TextBlock Name="textBlock1" TextAlignment="Center" DockPanel.Dock="Bottom" TextWrapping="Wrap" Margin="20,0">
            The configuration setup utility is now ready to modify your configuration.<LineBreak/><LineBreak/>
            Note that if either the openECA Windows service or the openECA Manager are running they will be stopped before configuration changes are made.<LineBreak/><LineBreak/>
            Select &quot;Next&quot; to continue.
        </TextBlock>
    </DockPanel>
</UserControl>
